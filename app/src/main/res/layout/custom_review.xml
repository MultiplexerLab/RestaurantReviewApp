<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:stateListAnimator="@null"
        android:background="@drawable/squarebox">

        <ImageView
            android:id="@+id/imgR"
            android:layout_width="72dp"
            android:layout_height="74dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/img" />

        <TextView
            android:id="@+id/nameR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgR"
            android:paddingRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Name: Takeout"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/addressR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgR"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/ratingR"
            android:layout_below="@+id/nameR"
            android:fontFamily="@font/roboto_medium"
            android:text="Address: Banani"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ratingR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/tabcol"
            android:text="4.8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />





    </RelativeLayout>

</RelativeLayout>