<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/squarebox"
        android:padding="10dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Restaurant Name"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Restaurant Address"

            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Contact Person Name"

            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Contact Person Phone no"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/submit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/request_merchant_box"
            android:elevation="5dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:stateListAnimator="@null"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>