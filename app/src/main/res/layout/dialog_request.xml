<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:elevation="6dp"
        android:text="Enter Your Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/squarebox"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Restaurant Name"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Restaurant Address"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Contact Person Name"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:fontFamily="@font/federo"
            android:gravity="center"
            android:hint="Contact Person Phone no"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*We will contact you within 72 hours \nPlease wait for our call."
            android:gravity="center_horizontal"
            android:textColor="@color/googlecol"
            android:alpha="0.8"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:elevation="5dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:stateListAnimator="@null"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>